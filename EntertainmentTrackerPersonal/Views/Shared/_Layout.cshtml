<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title MTS(One)</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")       
    </head>

    <body>
        <h1 class="mainTitle">Movie Tracking System(One)</h1>
        <header>
            <div class="content-wrapper">
              
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav class="navbar navbar-default" role="navigation">
                        <div class="navbar-header">
                            <a class="navbar-brand" style="padding:5px 15px;" href='@Url.Action("UserHome", "Users")'>
                                <img src='@Url.Content("~/Images/logos/pLogo.jpg")' />
                            </a>
                            
                          
                        </div>
                        <ul id="menu"  class="nav navbar-nav">
                            <li>@Html.ActionLink("Home", "UserHome", "Users")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            <li class="divider"></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body" class="container">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content3 clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year Pavel One</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
